#include <iostream>
using namespace std;
float somarArray(float arr[], int tamanho){
	float soma = 0;
	
	for(int i=0; i<tamanho; i++){
		soma = soma + arr[i];
	}
	
	return soma;
}
int main(){
	
	int tamanho;
	cout<<"Digite o tamanho do vetor: "<<endl;
	cin>>tamanho;
	float arr[tamanho];
	
	cout<<"Digite os elementos do vetor: "<<endl;
	for(int i=0;i<tamanho;i++){
		cin>>arr[i];
	}
	
	cout<<"Soma dos elementos do vetor: "<<somarArray(arr, tamanho);
	
	return 0;
}
